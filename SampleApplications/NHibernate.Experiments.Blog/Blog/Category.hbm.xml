<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
				   assembly="Blog"
				   namespace="MyBlog">
	<class name="Category"
		   table="Categories">
		<id name="Id">
			<generator class ="identity"/>
		</id>
		<property name="Name"/>
		<set name="Posts"
			 table="CategoriesPosts">
			<key column="CategoryId"/>
			<many-to-many class="Post"
						  column="PostId" />
		</set>
	</class>
</hibernate-mapping>