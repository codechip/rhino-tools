<?xml version="1.0" encoding="utf-8" ?>
<configuration>
	<configSections>
		<section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler,log4net" />
		<section name="nhibernate" type="System.Configuration.NameValueSectionHandler, System, Version=1.0.5000.0, Culture=neutral, PublicKeyToken=b77a5c561934e089" />
	</configSections>
	<!-- 
	Do NOT change this values. They are for NHibenrate Query Analyzer use.
	The values for your own projects are set in the project, by adding an app.config
	or hibernate.cfg.xml file.
	-->
	<nhibernate>
		<add key="hibernate.connection.provider" value="NHibernate.Connection.DriverConnectionProvider" />
		<add key="hibernate.dialect" value="NHibernate.Dialect.SQLiteDialect" />
		<!-- doing this because NH 1.0.3 doesn't have support for System.Data.Sqlite natively. -->
		<add key="hibernate.connection.driver_class" value="NHibernate.Driver.SQLite20Driver, NHibernate" />
		<add key="hibernate.connection.connection_string" value="Data Source=%APPDATA%\NHibernate Query Analyzer\Sqlite.db;New=False;UTF8Encoding=True;Version=3;" />
	</nhibernate>
	<log4net>
		<appender name="LogAllToFile" type="log4net.Appender.FileAppender">
			<file value="logs.txt" />
			<appendToFile value="false" />
			<layout type="log4net.Layout.PatternLayout">
				<conversionPattern value="%d [%t] %-5p %c [%x] &lt;%X{auth}&gt;  - %m%n" />
			</layout>
		</appender>
		<root>
			<priority value="ALL" /> <!-- ALL, DEBUG, INFO, WARN, ERROR, FATAL, OFF-->
			<!--<appender-ref ref="UdpAppender" />-->
			<appender-ref ref="LogAllToFile" />
		</root>
	</log4net>
</configuration>